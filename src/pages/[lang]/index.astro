---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { SectionItem, RoundButton } from "../../components/ui";
import Glider from "../../components/Glider";
import RecommendationsCarousel from "../../components/Carousel";

export function getStaticPaths() {
  return [
    { params: { lang: "he" } },
    { params: { lang: "en" } },
  ];
}

interface Params {
  lang: "he" | "en";
}

const { params } = Astro;
const lang = (params as Params).lang;
const t = {
  he: {
    pageTitle: "עמוד הבית",
    heroTitle: "רועי דדו",
    subtitle: "מורה דרך",
    aboutTitle: "אודות",
    aboutText: "שמי כרמל, ואני הפנים שמאחורי שביליטו.",
    aboutButton: "עוד עליי",
    servicesTitle: "הטיולים שלנו",
    servicesText: "מסלולים וחוויות לכל גיל",
    servicesButton: "לפרטים נוספים",
    routesTitle: "מסלולים מומלצים",
    routesText: "טיולי משפחות ועוד!",
    routesButton: "לפרטים נוספים",
    recommendations: "המלצות",
  },
  en: {
    pageTitle: "Home Page",
    heroTitle: "Roey Dado",
    subtitle: "Tour Guide",
    aboutTitle: "About",
    aboutText: "My name is Carmel, and I am the face behind Shvilito.",
    aboutButton: "Learn More About Me",
    servicesTitle: "Our Trips",
    servicesText: "Adventures and Experiences for Everyone",
    servicesButton: "More Info",
    routesTitle: "Recommended Routes",
    routesText: "Visit Nature with your Family",
    routesButton: "More Info",
    recommendations: "Recommendations",
  },
}[lang];

const sections = ["hero", "about", "food", "tours", "stam", "recs"];
---

<BaseLayout pageTitle={t.pageTitle} lang={lang}>
<Glider client:load lang={lang} sections={sections}>

    <!-- Hero -->
    <section id="hero" class="relative w-full  flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent" />
      <div class="relative z-10 flex flex-col items-center text-center gap-6 px-4">
          <div
      class={`flex items-center justify-center gap-6 ${
        lang === "he" ? "flex-row-reverse" : "flex-row"
      }`}
    >
        <img src="/logo.png" alt="Logo" class="w-40 md:w-60" />
              <div class="flex flex-col">

        <h1 class="text-[#57715C] text-4xl md:text-6xl font-bold drop-shadow-lg">{t.heroTitle}</h1>
        <h3 class="text-[#57715C] text-2xl md:text-3xl font-bold drop-shadow-lg">{t.subtitle}</h3>
        </div>
        </div>
        <div class="flex flex-wrap justify-center gap-4 mt-4">
          <RoundButton text="/Instagram_Glyph_Black.svg" href="https://www.instagram.com/shvilito_tours/" />
          <RoundButton text="/facebook.svg" href="https://www.facebook.com/Shvilito.tours" />
          <RoundButton text="/Digital_Glyph_Black.svg" href="https://wa.me/c/972507235363" />
          <RoundButton text="/email.svg" href="mailto:melavni@gmail.com" />
        </div>
      </div>
    </section>

    <!-- Tours -->
    <section id="tours" class="w-full flex justify-center">
      <SectionItem
        title="tours"
        imageSrc="/logo.png"
        imageAlt="תמונה לדוגמה"
        buttonText="לפרטים"
        buttonHref={`/${lang}/trips`}
        lang={lang}
      />
    </section>

    <!-- Food -->
    <section id="food" class="w-full flex justify-center ">
      <SectionItem
        title="food"
        imageSrc="/logo.png"
        imageAlt="תמונה לדוגמה"
        buttonText="לפרטים"
        buttonHref={`/${lang}/trips`}
        lang={lang}
      />
    </section>

    <!-- About -->
    <section id="about" class="w-full flex justify-center ">
      <SectionItem
        title="about"
        imageSrc="/logo.png"
        imageAlt="תמונה לדוגמה"
        buttonText="לפרטים"
        buttonHref={`/${lang}/trips`}
        lang={lang}
      />
    </section>

    <!-- Stam -->
    <section id="stam" class="w-full flex justify-center ">
      <SectionItem
        title="סיורים"
        imageSrc="/logo.png"
        imageAlt="תמונה לדוגמה"
        buttonText="לפרטים"
        buttonHref={`/${lang}/trips`}
        lang={lang}
      />
    </section>

    <!-- Recommendations -->
    <section id="recs" class="py-10 w-full">
      <h2 class="text-3xl font-bold text-center mb-8 text-[#57715C]">
        {t.recommendations}
      </h2>
      <RecommendationsCarousel client:only="react" lang={lang} />
    </section>

  </Glider>
</BaseLayout>
